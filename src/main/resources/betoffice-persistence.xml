<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<!--+
    ! =========================================================================
    ! Enthaelt die Verbindungseinstellungen zur Datenbank; Organisiert die
    ! Hibernate Konfiguration (Mapping-Dateien); Initialisiert das Hibernate
    ! Transaktionsmanagement; Stellt die DAOs, die Betoffice Konfiguration und
    ! das Transaktionsmanagement in der Configuration zur Verfuegung.
    ! Diese Spring Konfiguration ist ueber die folgenden Eigenschaften
    ! parametrisierbar:
    !
    ! ${database.driver.class} = Database Driver Class Name
    ! ${database.url} = Database JDBC URL
    ! ${database.user} = Database User
    ! ${database.password} = Database User Password
    !
    ! =========================================================================
    +-->

  <bean id="sessionFactory"
    class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
    <property name="mappingResources">
      <list>
        <value>/de/winkler/betoffice/storage/Location.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/Player.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/Goal.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/Team.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/TeamAlias.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/GroupType.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/Group.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/Season.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/Game.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/GameList.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/GameTipp.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/User.hbm.xml</value>
        <value>/de/winkler/betoffice/storage/UserSeason.hbm.xml</value>
      </list>
    </property>
    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.dialect">${hibernate.dialect}</prop>
      </props>
    </property>
    <property name="dataSource">
      <ref bean="myDataSource" />
    </property>
  </bean>

  <!-- The old package structure -->
  <context:component-scan base-package="de.winkler.betoffice"/>
  <!-- The new package structure -->
  <context:component-scan base-package="de.betoffice"/>

  <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    <property name="dataSource"><ref bean="myDataSource" /></property>
    <property name="sessionFactory"><ref bean="sessionFactory"/></property>
  </bean>

  <tx:annotation-driven transaction-manager="transactionManager"/>

  <aop:aspectj-autoproxy/>

  <bean id="performanceMeasurement"
    class="de.winkler.betoffice.service.PerformanceMeasurement" />

</beans>
