<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="de.winkler.betoffice.storage.Goal" table="bo_goal"
		dynamic-update="false" dynamic-insert="false">

		<id name="id" column="id" type="java.lang.Long">
			<generator class="native">
			</generator>
		</id>

		<property name="index" type="int" update="true" insert="true"
			column="bo_index" />

		<component name="result" class="de.winkler.betoffice.storage.GameResult">
			<property name="homeGoals" type="int" update="true" insert="true"
				column="bo_homegoals" />

			<property name="guestGoals" type="int" update="true" insert="true"
				column="bo_guestgoals" />
		</component>

		<property name="goalType" column="bo_goaltype" update="true"
			insert="true">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">de.winkler.betoffice.storage.enums.GoalType</param>
			</type>
		</property>

		<property name="minute" type="java.lang.Integer" update="true"
			insert="true" column="bo_minute" />

		<property name="comment" type="java.lang.String" update="true"
			insert="true" column="bo_comment" unique="true" />

		<property name="openligaid" type="java.lang.Long" update="true"
			insert="true" column="bo_openligaid" />

		<many-to-one name="game" class="de.winkler.betoffice.storage.Game"
			cascade="none" outer-join="auto" update="true" insert="true" column="bo_game_ref" />

		<many-to-one name="player" class="de.winkler.betoffice.storage.Player"
			cascade="none" outer-join="auto" update="true" insert="true" column="bo_player_ref" />
	</class>

</hibernate-mapping>
