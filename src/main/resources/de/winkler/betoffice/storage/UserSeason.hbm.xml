<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="de.winkler.betoffice.storage.UserSeason" table="bo_user_season"
		dynamic-update="false" dynamic-insert="false">

		<id name="id" column="id" type="java.lang.Long">
			<generator class="native">
			</generator>
		</id>

		<many-to-one name="season" class="de.winkler.betoffice.storage.Season"
			cascade="none" outer-join="auto" update="true" insert="true" column="bo_season_ref"
			not-null="true" lazy="false" />

		<many-to-one name="user" class="de.winkler.betoffice.storage.User"
			cascade="none" outer-join="auto" update="true" insert="true" column="bo_user_ref"
			not-null="true" lazy="false" />

		<property name="wager" type="int" update="true" insert="true"
			column="bo_wager" />

		<property name="roleType" column="bo_roletype" update="true"
			insert="true">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">de.winkler.betoffice.storage.enums.RoleType</param>
			</type>
		</property>
	</class>

</hibernate-mapping>
