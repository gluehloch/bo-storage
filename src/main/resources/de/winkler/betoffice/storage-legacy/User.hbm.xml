<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="de.winkler.betoffice.storage.User" table="bo_user"
    dynamic-update="false" dynamic-insert="false">

    <id name="id" column="id" type="java.lang.Long">
      <generator class="native">
      </generator>
    </id>

    <property name="name" type="java.lang.String" update="true" insert="true"
      column="bo_name" />

    <property name="surname" type="java.lang.String" update="true"
      insert="true" column="bo_surname" />

    <property name="nickName" type="java.lang.String" update="true"
      insert="true" column="bo_nickname" not-null="true" unique="true" />

    <property name="email" type="java.lang.String" update="true"
      insert="true" column="bo_email" />

    <property name="phone" type="java.lang.String" update="true"
      insert="true" column="bo_phone" />

    <property name="password" type="java.lang.String" update="true"
      insert="true" column="bo_password" />

    <property name="automat" type="boolean" update="true" insert="true"
      column="bo_automat" />

    <property name="excluded" type="boolean" update="true" insert="true"
      column="bo_excluded" />

    <property name="title" type="java.lang.String" update="true"
      insert="true" column="bo_title" />

    <property name="admin" type="java.lang.Boolean" update="true"
      insert="true" column="bo_admin" />

    <set name="userSeason" lazy="false" inverse="true" cascade="none" sort="unsorted">
      <key column="bo_user_ref" />
      <one-to-many class="de.winkler.betoffice.storage.UserSeason" />
    </set>

  </class>

</hibernate-mapping>
